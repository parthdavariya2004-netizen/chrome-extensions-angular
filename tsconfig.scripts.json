{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/scripts",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["chrome"],
    "noEmit": false
  },
  "include": [
    "src/content.ts",
    "src/background.ts",
    "src/app/ticketmodal/ticketmodal.ts"
  ]
}
