{
  "manifest_version": 3,
  "name": "jira ticket ng",
  "version": "1.0.0",
  "description": "A simple chrome extension for jira ticket",
  "permissions": ["tabs", "scripting", "activeTab", "contextMenus"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["https://*.atlassian.net/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://*.atlassian.net/*"],
  "web_accessible_resources": [
    {
      "resources": ["main.js", "chunk-*.js", "styles.css"],
      "matches": ["https://*.atlassian.net/*"]
    }
  ],
  "options_page": "/options/options.html"
}
